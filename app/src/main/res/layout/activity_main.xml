<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

    <data>
        <variable
                name="viewModel"
                type="com.delarosa.cashcurrency.ui.main.MainViewModel"/>
    </data>
    <ScrollView android:layout_width="match_parent"

                android:background="@color/colorPrimary"
                android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
        >

            <androidx.gridlayout.widget.GridLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_currencies" app:layout_constraintTop_toBottomOf="@+id/button_convert"
                    android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

            </androidx.gridlayout.widget.GridLayout>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Convert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_convert"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintTop_toBottomOf="@+id/text_convert"
                    app:layout_constraintStart_toEndOf="@+id/edit_text_convert"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="42dp"
                    app:layout_constraintBottom_toTopOf="@+id/list_currencies" android:layout_marginEnd="16dp"
            />
            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/edit_text_convert"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintEnd_toStartOf="@+id/button_convert"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/button_convert"
                    android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            />
            <androidx.appcompat.widget.AppCompatTextView
                    android:text="convert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_convert"
                    app:layout_constraintTop_toBottomOf="@+id/text_your_available"
                    android:layout_marginBottom="13dp"
                    app:layout_constraintBottom_toTopOf="@+id/button_convert"
                    app:layout_constraintStart_toStartOf="@+id/edit_text_convert" android:layout_marginStart="8dp"
            />
            <androidx.appcompat.widget.AppCompatTextView
                    android:text="your available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_your_available"
                    app:layout_constraintTop_toBottomOf="@+id/available" android:layout_marginBottom="79dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/text_convert"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.95"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:text="2500"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/available" android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/text_your_available"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.017"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>